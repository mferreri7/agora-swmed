
<%= simple_form_for(@note) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :university, label: "Tu universidad", placeholder: "Ej: EAFIT" %>
    <%= f.input :degree, label: "Tu carrera", placeholder: "Ej: Economía" %>
    <%= f.input :subject, label: "¿De qué materia son tus notas?", placeholder: "Ej: Microeconomia 1"%>
    <%= f.input :semester, label: "¿En qué semestre estás?", placeholder: "Ej: Sexto" %>
    <%= f.input :description, label: "Una breve descripción de que contienen", placeholder: "Ej: Primera clase"%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Publicar apuntes",  class: "btn btn-primary form-btn" %>
  </div>
<% end %>
