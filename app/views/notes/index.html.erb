<p id="notice"><%= notice %></p>

<h1>Notes</h1>

<table>
  <thead>
    <tr>
      <th>University</th>
      <th>Degree</th>
      <th>Subject</th>
      <th>Semester</th>
      <th>Description</th>
      <th>Attachment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.university %></td>
        <td><%= note.degree %></td>
        <td><%= note.subject %></td>
        <td><%= note.semester %></td>
        <td><%= note.description %></td>
        <td><%= note.attachment %></td>
        <td><%= link_to 'Show', note %></td>
        <td><%= link_to 'Edit', edit_note_path(note) %></td>
        <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_note_path %>
